<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_16dp">

    <TextView

        android:lineSpacingExtra="3dp"
        android:fontFamily="@font/sfpromedium2"
        android:id="@+id/tvMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:layout_marginEnd="@dimen/space_8dp"
        android:text="The TTS engine you are using is not working now, please double check it, switch to another TTS engine, or download TTS voice language."
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton

        android:fontFamily="@font/sfpromedium2"
        android:id="@+id/btnDownloadTTSEngine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_16dp"
        android:background="@android:color/transparent"
        android:text="DOWNLOAD TTS ENGINE" />

    <androidx.appcompat.widget.AppCompatButton
        android:fontFamily="@font/sfpromedium2"
        android:id="@+id/btnSelectTTSEngine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_8dp"
        android:background="@android:color/transparent"
        android:text="SELECT TTS ENGINE" />

</LinearLayout>
