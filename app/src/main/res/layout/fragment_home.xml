<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65EBEDEF"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        tools:context=".HomeActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/robobold"
            android:text="Hi Vijay,"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/letworkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hi"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/robobold"
            android:text="LET'S WORKOUT AT HOME"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_profile" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/letworkout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:scrollbars="none"

            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/tricepsRR"
                    android:layout_width="130dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"


                    >

                    <ImageView
                        android:id="@+id/triceps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/triceps"

                        />

                    <ImageView
                        android:id="@+id/back1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/blacktriceps"
                        android:visibility="gone"

                        />

                    <TextView
                        android:id="@+id/tricepsTX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/workTX1"

                        android:layout_marginStart="20dp"

                        android:fontFamily="@font/sfprobold2"
                        android:text="TRICEPS"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/workTX1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/sfprobold2"
                        android:text="WORKOUT"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bicepsRR"
                    android:layout_width="130dp"
                    android:layout_height="172dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"

                    >


                    <ImageView
                        android:id="@+id/biceps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/biceps"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/back2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/blackbiceps"

                        />

                    <TextView
                        android:id="@+id/bicepsTX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/workTX2"
                        android:layout_marginStart="20dp"

                        android:fontFamily="@font/sfprobold2"

                        android:text="BICEPS"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/workTX2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/sfprobold2"
                        android:text="WORKOUT"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/dumbellRR"
                    android:layout_width="130dp"
                    android:layout_height="172dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/dumbell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/dumbell"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/back3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/blackdumbell"

                        />

                    <TextView
                        android:id="@+id/dumbellTX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/workTX3"
                        android:layout_marginStart="20dp"

                        android:fontFamily="@font/sfprobold2"

                        android:text="DUMBELL"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/workTX3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/sfprobold2"
                        android:text="WORKOUT"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>


        <in.softment.armworkout.Utils.NonSwipeAbleViewPager


            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/horizontalScrollView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="84dp" />




    </RelativeLayout>


</ScrollView>


