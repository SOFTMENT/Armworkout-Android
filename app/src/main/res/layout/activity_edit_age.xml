<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAgeActivity">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back_small" />


        <TextView
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfpromedium"
            android:text="What is your current age?"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pickerll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            app:np_dividerColor="@android:color/transparent"
            app:np_formatter="#f00"
            app:np_height="180dp"
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="#FAC419"
            app:np_selectedTextSize="30sp"
            app:np_textColor="@color/dark_gray"
            app:np_textSize="15sp"
            app:np_wheelItemCount="8"
            app:np_width="64dp" />


    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/pickerll"
        android:fontFamily="@font/sfpromedium2"
        android:text="Years"
        android:textColor="#FAC419"

        android:textSize="22sp" />




    <androidx.appcompat.widget.AppCompatButton

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CONTINUE"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corner_8dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:id="@+id/continueBtn"
        />
</RelativeLayout>