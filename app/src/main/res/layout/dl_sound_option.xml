<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_16dp"
    android:paddingTop="@dimen/space_16dp"
    android:paddingEnd="@dimen/space_16dp"
    android:paddingBottom="@dimen/space_8dp">

    <!-- Todo Title -->
    <TextView
        android:fontFamily="@font/robobold"
        android:id="@+id/txt_dl_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8dp"
        android:text="SOUND OPTIONS"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Todo Mute -->
    <RelativeLayout
        android:id="@+id/rlMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:padding="@dimen/space_8dp">

        <ImageView
            android:id="@+id/imgMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_volume_off_24"
            app:tint="@color/teal_700" />

        <TextView
            style="@style/dialog_sound_option_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgMute"
            android:text="Mute" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swtMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:checked="false" />

    </RelativeLayout>

    <!-- Todo Voice Guide -->
    <RelativeLayout
        android:id="@+id/rlVoiceGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:padding="@dimen/space_8dp">

        <ImageView
            android:id="@+id/imgVoiceGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_volume_up_24"
            app:tint="@color/teal_700" />

        <TextView
            style="@style/dialog_sound_option_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgVoiceGuide"
            android:text="Voice Guide" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swtVoiceGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:checked="true" />

    </RelativeLayout>

    <!-- Todo Coach tips -->
    <RelativeLayout
        android:id="@+id/rlCoachTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:padding="@dimen/space_8dp">

        <ImageView
            android:id="@+id/imgCoachTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_record_voice_over_24"
            app:tint="@color/teal_700" />

        <TextView
            style="@style/dialog_sound_option_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgCoachTips"
            android:text="Coach tips" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swtCoachTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:checked="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/space_16dp"
        android:padding="@dimen/space_16dp"
        android:text="Ok"
        android:textStyle="normal"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/teal_700" />

</LinearLayout>
